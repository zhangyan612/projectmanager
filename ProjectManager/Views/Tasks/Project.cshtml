@model IEnumerable<ProjectManager.Models.Task>

@{
    ViewBag.Title = "Project";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link rel="stylesheet" type="text/css" href="~/Scripts/layout/layout-default.css">
    <style>
        .select2 > .select2-choice.ui-select-match {
            /* Because of the inclusion of Bootstrap */
            height: 29px;
        }

        .selectize-control > .selectize-dropdown {
            top: 36px;
        }
    </style>
    <script src="~/Scripts/layout/jquery.layout.js"></script>
    <script src="~/Scripts/layout/callbacks/jquery.layout.resizePaneAccordions.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {

            myLayout = $('#flexLayout').layout({
                west__size: 800,
                center__size: 800,
                west__onresize: $.layout.callbacks.resizePaneAccordions,
                center__onresize: $.layout.callbacks.resizePaneAccordions
            });


            $('#exampleModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget) // Button that triggered the modal
                var recipient = button.data('whatever') // Extract info from data-* attributes
                // If necessary, you could initiate an AJAX request here (and then do the updating in a callback).
                // Update the modal's content. We'll use jQuery here, but you could use a data binding library or other methods instead.
                var modal = $(this)
                modal.find('.modal-title').text('New message to ' + recipient)
                modal.find('.modal-body input').val(recipient)
            })




        });
    </script>

    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.0/angular.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.0/angular-sanitize.js"></script>

    <!-- ui-select files -->
    <link rel="stylesheet" href="~/Scripts/ui-select/select.css">
    <script src="~/Scripts/ui-select/select.js"></script>
    <script src="~/Scripts/app/projectlist.js"></script>

}

<div id="flexLayout" style="min-height:900px; height:100%;" ng-app='ProjectList' ng-controller="ProjectListController">
    <div class="ui-layout-center" style="display: none;">
        <div class="col-md-12" id="itemDetails">
            <div ng-show="task">
                <h4>{{task.Id}} : {{task.Text}}</h4>


                @*<p>
                    Status :
                    <select class="form-control" ng-model="task.Status" ng-options="x for x in StatusOptions" ng-change="statusChanged(task.Status)"></select>
                </p>
                <p>
                    Assigned to :
                    <span ng-show="task.AssignedFirstUser">{{task.AssignedFirstUser}}</span>
                    <a class="btn btn-success btn-xs" ng-hide="task.AssignedFirstUser" data-toggle="modal" data-target="#myModal">Assign</a>

                </p>*@

                <form class="form-horizontal">
                    <fieldset>
                        <div class="form-group">
                            <label class="col-sm-1 control-label">Status: </label>
                            <div class="col-sm-6">
                                <select class="form-control" ng-model="task.Status" ng-options="x for x in StatusOptions" ng-change="ModelChanged()"></select>
                            </div>
                        </div>


                        <div class="form-group">
                            <label class="col-sm-1 control-label">Assign To: </label>
                            <div class="col-sm-6">


                                <ul>
                                    <li ng-repeat="item in task.AssignedUserList">
                                        {{ item }} <button ng-click="remove($index)">Remove</button>
                                    </li>
                                </ul>

                                <div>
                                    <input type="text" ng-model="person">
                                    <button type="submit" ng-click="add()">Add</button>
                                </div>


                                <span ng-show="task.AssignedUserList">{{task.AssignedUserList[0]}}</span>

                                <a class="btn btn-success btn-xs" ng-hide="task.AssignedUserList[0]">
                                    <i class="fa fa-plus" aria-hidden="true"></i>
                                    Assign
                                </a>


                                <ui-select ng-model="person.selected" theme="bootstrap" style="width:300px;" ng-change="ModelChanged($select.selected)">
                                    <ui-select-match placeholder="Select a person">{{$select.selected.FullName}}</ui-select-match>
                                    <ui-select-choices repeat="item in projectUsers | filter: $select.search">
                                        <div ng-bind-html="item.FullName"></div>
                                        <small ng-bind-html="item.Email"></small>
                                    </ui-select-choices>
                                </ui-select>
                            </div>
                        </div>

                    </fieldset>
                </form>


                <p>
                    Start Date : {{task.StartDate}}
                </p>
                <p>
                    Progress :{{task.Progress}}
                </p>

                <div ng-show="descEditMode">
                    <p>Note: <button ng-click="saveTaskDescription()" style="float:right;" class="btn btn-xs btn-success">Save Note</button></p>

                    <p><textarea class="form-control" rows="5" ng-model="TaskDescription.Description"></textarea></p>
                </div>

                <div ng-hide="descEditMode">
                    <p>
                        Note: <button ng-click="EditTaskDescription()" style="float:right;" class="btn btn-xs btn-success">Edit Note</button>
                    </p>
                    <p>{{TaskDescription.Description}}</p>
                </div>

            </div>
            <div ng-hide="task">
                <h4>Please select task from left panel</h4>
            </div>
        </div>
    </div>

    <div class="ui-layout-west" style="display: none;">

        <div class="btn-group" role="group">
            <a href="@Url.Action("Index", "Projects")" class="btn btn-default btn-xs" target="_self">< Back</a>
            <a href="@Url.Action("Project","Tasks")" class="btn btn-default btn-xs" target="_self">Task List</a>
            <a href="@Url.Action("Project","Board")/@ViewBag.ProjectId" class="btn btn-default btn-xs" target="_self">Project Board</a>
            <a href="@Url.Action("Details","Projects")/@ViewBag.ProjectId" class="btn btn-default btn-xs" target="_self">Time Management</a>
        </div>

        <h3>Project Tasks</h3>

        <div>
            <table class="table table-striped">
                <tr>
                    <th>Id</th>
                    <th>Text</th>
                    <th>Status</th>
                    <th>Start Date</th>
                    <th>Duration</th>
                    <th>Progress</th>
                </tr>

                <tr ng-repeat="t in taskLists" ng-click="setTask(t)" ng-class="{ success: t === task }">
                    <td>{{t.Id}}</td>
                    <td>{{t.Text}}</td>
                    <td>{{t.Status}}</td>
                    <td>{{t.StartDate | date:'medium' }}</td>
                    <td>{{t.Duration}}</td>
                    <td>{{t.Progress}}</td>
                </tr>
            </table>
        </div>
    </div>
</div>

